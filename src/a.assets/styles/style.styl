*, :after, :before
  box-sizing: border-box

html,
body
  margin: 0
  padding: 0
  background: #fcf
  width: 100%
  height: 100%
  overflow: hidden

[class^=level]
  position: absolute
  width: 100%
  height: 100%
  flex-wrap: wrap
  background: #fff
  display: flex
  opacity: 0
  &.opened
    transition: opacity 1s, transform 1s
    z-index 1
    opacity: 1

.level-1
  > div
    border: 1px solid #000
    height: 50%
    width: 50%
    padding: 16px

.level-2
  > div
    border: 1px solid #000
    height: 33.33%
    width: 33.33%
    display: flex
    flex-wrap: wrap
    > div
      border: 1px solid #000
      height: 10%
      width: 10%

.level-3
  > div
    border: 1px solid #000
    height: 10%
    width: 10%
    padding: 16px

.level-4
  padding: 16px