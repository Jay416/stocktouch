*, :after, :before
  box-sizing: border-box

html,
body
  margin: 0
  padding: 0
  background: #fcf
  width: 100%
  height: 100%
  overflow: hidden

[class^=level]
  display: flex
  position: absolute
  width: 100%
  height: 100%
  flex-wrap: wrap
  background: #fff
  visibility: hidden;
  opacity: 0;
  transform: scale(1, 1)
  transition: visibility .4s, opacity .4s, transform .4s ease-out
  &.no-transition
    transition: none
  &.opened
    transition-delay: 0s
    visibility: visible
    opacity: 1

.back
  position: absolute
  top: 20px
  right: 20px
  height: 20px !important
  width: 20px !important
  background: #fcf
  border-radius: 50%

.block
  padding: 4px
  color: #fff
  background: #6bbe56
  height: 100%
  border-radius: 4px
  border: 1px solid #fff

.level-1
  > div
    height: 50%
    width: 50%

.level-2
  > div
    height: 33.33%
    width: 33.33%
    display: flex
    flex-wrap: wrap
    padding: 2px
    > div
      height: 20%
      width: 20%

.level-3
  padding: 6px
  > div
    height: 20%
    width: 20%
    .block
      border-radius: 12px
      border: 3px solid #fff

.level-4
  padding: 16px